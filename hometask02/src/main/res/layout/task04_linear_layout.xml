<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/sqr01"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="@color/grey"
            android:layout_weight="1"></ImageView>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="125"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="20K"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="22"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/posts"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/text_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/followers"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/text_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/following"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/user"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/address"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/description"
        android:textColor="@color/black"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sqr02"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>
        <ImageView
            android:id="@+id/sqr03"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>
        <ImageView
            android:id="@+id/sqr04"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>
        <ImageView
            android:id="@+id/sqr05"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>
        <ImageView
            android:id="@+id/sqr06"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>
        <ImageView
            android:id="@+id/sqr07"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:layout_weight="1"> </ImageView>

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal"
     android:layout_weight="1">

    <TextView
        android:id="@+id/directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/directions"
        android:textColor="@color/blue"
        android:drawableTop="@drawable/ic_baseline_directions_24"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        ></TextView>

     <TextView
         android:id="@+id/call"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/call"
         android:textColor="@color/blue"
         android:drawableTop="@drawable/ic_baseline_call_24"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center">></TextView>
     <TextView
         android:id="@+id/save"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/save"
         android:textColor="@color/blue"
         android:drawableTop="@drawable/ic_baseline_grade_24"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center">></TextView>
     <TextView
         android:id="@+id/website"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/website"
         android:textColor="@color/blue"
         android:drawableTop="@drawable/ic_baseline_insert_link_24"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center">></TextView>

 </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/sqr8"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@color/grey"
        android:layout_weight="1"
        android:layout_gravity="center"></ImageView>
    <ImageView
        android:id="@+id/sqr09"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@color/grey"
        android:layout_weight="1"
        android:layout_gravity="center">></ImageView>
    <ImageView
        android:id="@+id/sqr10"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@color/grey"
        android:layout_weight="1"
        android:layout_gravity="center">></ImageView>
</LinearLayout>
</LinearLayout>
